<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="app_name">
        <item name="android:text">@string/app_name</item>
        <item name="android:fontFamily">@font/bowlby_one</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="SexButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/user_sex_button_width</item>
        <item name="android:layout_height">@dimen/signUp_default_block_height</item>
        <item name="android:layout_margin">@dimen/signUp_default_margin</item>
        <item name="android:background">@drawable/rounded_rectangle_white</item>
        <item name="android:fontFamily">@font/sf_compact_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">@dimen/user_sex_button_textSize</item>
    </style>
    <style name="FitButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sf_compact_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">@dimen/fitButton_textSize</item>
        <item name="android:background">@drawable/rounded_rectangle_white</item>
    </style>


    <style name="UnderScrollingChooseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/scroll_choose_textSize</item>
        <item name="android:fontFamily">@font/sf_compact_display_semibold</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_margin">@dimen/scroll_choose_text_margin</item>
    </style>

</resources>
